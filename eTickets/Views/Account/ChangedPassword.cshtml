@using eTickets.Data.ViewModels;
@model ChangedPasswordVM;

@{
    ViewData["Title"] = "Đổi mật khẩu";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Đổi mật khẩu </h4>
        </p>

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="ChangedPassword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="PasswordNow" class="control-label"></label>
                        <input asp-for="PasswordNow" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="PasswordNew" class="control-label"></label>
                        <input type="password" asp-for="PasswordNew" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="NhaplaiPassword" class="control-label"></label>
                        <input type="password" asp-for="NhaplaiPassword" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input class="btn btn-outline-success float-right" type="submit" value="Changed" />
                        <a class="btn btn-outline-secondary" asp-controller="Account" asp-action="Information">Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
